// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// conf

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// authentcation

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  password  String
  firstName String
  lastName  String
  photoURL  String?
  bio       String?    // optional short bio for profile
  status    String?    @default("NEUTRAL") // "NEUTRAL" | "BEARISH" | "BULLISH"
  createdAt DateTime   @default(now())
  exchanges Exchange[]
  trades    Trade[]
  rules     Rule[]
  accounts  Account[]
  sessions  Session[]
  comments  Comment[]
  teamMembers     TeamMember[]
  teamMessages   TeamMessage[]
  teamTradeShares TeamTradeShare[]
  ownedTeams      Team[]          @relation("TeamOwner")
  teamInvitesReceived TeamInvite[] @relation("InvitedUser")
  // Friends
  friendRequestsSent     FriendRequest[] @relation("FriendRequestFrom")
  friendRequestsReceived FriendRequest[] @relation("FriendRequestTo")
  friendshipsAsA         Friendship[]    @relation("FriendshipUserA")
  friendshipsAsB         Friendship[]    @relation("FriendshipUserB")
  privacy                 UserPrivacy?
  blocksWhereIBlocker     Block[]         @relation("BlockBlocker")
  blocksWhereIBlocked     Block[]         @relation("BlockBlocked")
  // Chat
  conversationsAsA       Conversation[]  @relation("ConversationUserA")
  conversationsAsB       Conversation[]  @relation("ConversationUserB")
  messagesSent            Message[]
  presence                Presence?

  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// accounts details

model Rule {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  content  String
  traderID String @db.ObjectId
  trader   User   @relation(fields: [traderID], references: [id])

  @@map("rules")
}

model Trade {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  exchangeID   String    @db.ObjectId
  traderID     String    @db.ObjectId
  exchange     Exchange  @relation(fields: [exchangeID], references: [id])
  trader       User      @relation(fields: [traderID], references: [id])
  exchangeName String
  createdAt    DateTime  @default(now())
  symbol       String
  position     String
  margin       String
  date         DateTime  @db.Date
  status       String
  size         Int
  reason       String
  result       Int
  imageURL     String?
  comments     Comment[]
  teamShares   TeamTradeShare[]

  @@map("trades")
}

model Exchange {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  trader       User    @relation(fields: [traderID], references: [id])
  traderID     String  @db.ObjectId
  trades       Trade[]
  balance      Int
  exchangeName String
  image        String

  @@map("exchange")
}

model Comment {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  trade   Trade  @relation(fields: [tradeID], references: [id])
  tradeID String @db.ObjectId
  owner   User   @relation(fields: [ownerID], references: [id])
  ownerID String @db.ObjectId
}

// Team models

model Team {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  imageURL    String?
  ownerID     String        @db.ObjectId
  owner       User          @relation("TeamOwner", fields: [ownerID], references: [id])
  createdAt   DateTime      @default(now())
  members     TeamMember[]
  invites     TeamInvite[]
  messages    TeamMessage[]
  tradeShares TeamTradeShare[]
  rooms       TeamRoom[]
  @@map("teams")
}

model TeamMember {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  teamID    String   @db.ObjectId
  userID    String   @db.ObjectId
  role      String   // "OWNER" | "ADMIN" | "MEMBER"
  createdAt DateTime @default(now())
  team Team @relation(fields: [teamID], references: [id], onDelete: Cascade)
  user User @relation(fields: [userID], references: [id], onDelete: Cascade)
  @@unique([teamID, userID])
  @@map("team_members")
}

model TeamInvite {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  teamID         String    @db.ObjectId
  email          String
  invitedUserID  String?    @db.ObjectId
  role           String    // "ADMIN" | "MEMBER"
  token          String    @unique
  createdAt      DateTime  @default(now())
  expiresAt      DateTime
  acceptedAt     DateTime?
  team           Team      @relation(fields: [teamID], references: [id], onDelete: Cascade)
  invitedUser    User?      @relation("InvitedUser", fields: [invitedUserID], references: [id], onDelete: SetNull)
  @@map("team_invites")
}

model TeamMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  teamID    String   @db.ObjectId
  senderID  String   @db.ObjectId
  content   String
  createdAt DateTime @default(now())
  team   Team @relation(fields: [teamID], references: [id], onDelete: Cascade)
  sender User @relation(fields: [senderID], references: [id], onDelete: Cascade)
  @@map("team_messages")
}

model TeamTradeShare {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  teamID    String   @db.ObjectId
  tradeID   String   @db.ObjectId
  sharedBy  String   @db.ObjectId
  note      String?
  createdAt DateTime @default(now())
  team   Team  @relation(fields: [teamID], references: [id], onDelete: Cascade)
  trade  Trade @relation(fields: [tradeID], references: [id], onDelete: Cascade)
  sharer User  @relation(fields: [sharedBy], references: [id], onDelete: Cascade)
  @@unique([teamID, tradeID])
  @@map("team_trade_shares")
}

model TeamRoom {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  teamID        String   @db.ObjectId
  name          String
  createdAt     DateTime @default(now())
  isActive      Boolean  @default(true)
  sharedSymbol  String?  // e.g. BTCUSDT
  sharedMarket  String?  // default "crypto"
  sharedTf      String?  // default "15m"
  team Team @relation(fields: [teamID], references: [id], onDelete: Cascade)
  signals   RoomSignal[]
  @@map("team_rooms")
}

model RoomSignal {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  roomID    String   @db.ObjectId
  senderID  String   @db.ObjectId
  targetID  String?  // null = broadcast
  type      String   // "offer" | "answer" | "ice" | "join" | "leave"
  payload   Json
  createdAt DateTime @default(now())
  room TeamRoom @relation(fields: [roomID], references: [id], onDelete: Cascade)

  @@map("room_signals")
}

// Friends

model FriendRequest {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  fromUserID  String    @db.ObjectId
  toUserID    String    @db.ObjectId
  status      String    // "PENDING" | "ACCEPTED" | "DECLINED" | "CANCELED"
  createdAt   DateTime  @default(now())
  respondedAt DateTime?

  fromUser User @relation("FriendRequestFrom", fields: [fromUserID], references: [id], onDelete: Cascade)
  toUser   User @relation("FriendRequestTo", fields: [toUserID], references: [id], onDelete: Cascade)

  @@unique([fromUserID, toUserID])
  @@map("friend_requests")
}

model Friendship {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userAID    String   @db.ObjectId
  userBID    String   @db.ObjectId
  createdAt  DateTime @default(now())

  userA User @relation("FriendshipUserA", fields: [userAID], references: [id], onDelete: Cascade)
  userB User @relation("FriendshipUserB", fields: [userBID], references: [id], onDelete: Cascade)

  @@unique([userAID, userBID])
  @@map("friendships")
}

model UserPrivacy {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userID          String   @db.ObjectId @unique
  shareWinRate    Boolean  @default(false)
  shareTradeCount Boolean  @default(true)
  shareTopSymbols Boolean  @default(true)
  shareActivity   Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userID], references: [id], onDelete: Cascade)

  @@map("user_privacy")
}

model Block {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  blockerID  String   @db.ObjectId
  blockedID  String   @db.ObjectId
  createdAt  DateTime @default(now())

  blocker User @relation("BlockBlocker", fields: [blockerID], references: [id], onDelete: Cascade)
  blocked User @relation("BlockBlocked", fields: [blockedID], references: [id], onDelete: Cascade)

  @@unique([blockerID, blockedID])
  @@map("blocks")
}

// Chat

model Conversation {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userAID    String   @db.ObjectId
  userBID    String   @db.ObjectId
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userA User @relation("ConversationUserA", fields: [userAID], references: [id], onDelete: Cascade)
  userB User @relation("ConversationUserB", fields: [userBID], references: [id], onDelete: Cascade)
  messages Message[]

  @@unique([userAID, userBID])
  @@map("conversations")
}

model Message {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  conversationID String       @db.ObjectId
  senderID       String       @db.ObjectId
  content        String
  createdAt      DateTime     @default(now())

  conversation Conversation @relation(fields: [conversationID], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderID], references: [id], onDelete: Cascade)

  @@map("messages")
}

model Presence {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userID    String   @db.ObjectId @unique
  status    String   // "ONLINE" | "AWAY" | "OFFLINE"
  lastSeen  DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userID], references: [id], onDelete: Cascade)

  @@map("presence")
}
